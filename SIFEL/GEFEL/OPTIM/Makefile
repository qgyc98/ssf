########################
#                      #
#  Makefile for OPTIM  #
#                      #
########################



################################################################### 
#  Include default part of Makefile - 
#  compiler definitions, flags, libraries ...
#
include ../../Makefile.in



################################################################### 
#  List of include directories
#
INCLUDES = ../CMLFILE/:../RANDY/:../../GEFEL:../PARSER



################################################################### 
#  List of libraries
#

# list of dependent libraries
LOC_LIBS	= -lcmlfile -lrandy -lgef -lparser

# list of paths to dependent libraries
DIR_LIBS 	= -L../CMLFILE -L../RANDY -L../../GEFEL -L../PARSER

# list of all libraries - SYS_LIBS are defined in the default Makefile.in
LIBS = $(DIR_LIBS) $(LOC_LIBS) $(SYS_LIBS)



####################################################################
#  List of files
#
SRCS =	obj_funct.cpp optim_driver.cpp sade.cpp grade.cpp



####################################################################
#  List of object files
#
OBJS     = $(SRCS:%.cpp=$(OUTPUTPATH)%.o)
LIBOPTIM = $(OUTPUTPATH)liboptim.a
DEPS     = $(SRCS:%.cpp=$(OUTPUTPATH)%.d)


####################################################################
#  Targets
#
all:  $(LIBOPTIM)

$(LIBOPTIM) : $(OBJS)
	$(RM) $@
	@(echo "##### Creating OPTIM library . . .")
	@(echo $(AR) $(ARFLAGS) $@ $(SRCS:%.cpp=$(OUTPUTDIR)%.o))
	@($(AR) $(ARFLAGS) $@ $(OBJS))
	@(echo "##### OPTIM library was successfully created")

$(OBJS): | $(OUTPUTPATH)

$(OUTPUTPATH):
	@(mkdir -p $(OUTPUTPATH))

clean:
	@($(RM) $(OBJS) $(DEPS) *~ core)
	@($(RM) $(LIBOPTIM) )
	@(echo " optim was successfully cleaned")

cleanall:       
	@($(RM) -r -f $(addprefix $(SIFEL_ROOT)$(BIN_ROOT)$(MODULE_PATH),$(REMOVEDIR)))
	@(echo " optim was successfully cleaned")

cleandepall:
	@($(RM) -r -f $(SIFEL_ROOT)$(BIN_ROOT)$(MODULE_PATH))
	@(echo " optim BIN was successfully cleaned")



####################################################################
#  Dependencies generated by compilers
#
-include $(DEPS)



####################################################################
#  Suffix rules
#
$(OUTPUTPATH)%.o : %.cpp
	@export CPATH=$(INCLUDES); \
	echo $(CC) $(CFLAGS) -c $(<D)/$(<F); \
	$(CC) $(CFLAGS) $(COMPATFLAGS) $(DEFS) -c $(<D)/$(<F) -o $(@D)/$(@F)
