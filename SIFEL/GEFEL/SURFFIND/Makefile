################################################################
#
#  Makefile for surface finder
# 
################################################################



################################################################### 
#  Include default part of Makefile - 
#  compiler definitions, flags, libraries ...
#
include ../../Makefile.in



################################################################### 
#  List of include directories
#
INCLUDES        = ../../GEFEL/:../PARSER:.



################################################################### 
#  List of libraries
#

# list of local libraries
LOC_LIBS	= 

# list of paths to dpendent libraries
DIR_LIBS 	= 

# list of all libraries - SYS_LIBS are defined in the default Makefile.in
LIBS 		= $(DIR_LIBS) $(LOC_LIBS) $(SYS_LIBS)



####################################################################
#  List of source files and directories
#
SRCS = oblast.cpp oblasti.cpp plocha.cpp 



####################################################################
#  List of object files
#
OBJS        = $(SRCS:%.cpp=$(OUTPUTPATH)%.o)
LIBSURFFIND = $(OUTPUTPATH)libsurffind.a
DEPS        = $(SRCS:%.cpp=$(OUTPUTPATH)%.d)



####################################################################
#  Targets
#
all:  $(LIBSURFFIND)

$(LIBSURFFIND): $(OBJS) 
	$(RM) $@
	@(echo "##### Creating SURFFIND library . . ." $(LIBSURFFIND))
	@(echo $(AR) $(ARFLAGS) $@ $(SRCS:%.cpp=$(OUTPUTDIR)%.o))
	@($(AR) $(ARFLAGS) $@ $(OBJS))
	@(echo "##### SURFFIND library was successfully created")

$(OBJS): | $(OUTPUTPATH)

$(OUTPUTPATH):
	@(mkdir -p $(OUTPUTPATH))

clean: 
	@($(RM) $(LIBSURFFIND) $(OBJS) $(DEPS) *~ core)
	@(echo " surffind was successfully cleaned")

cleanall:      
	@($(RM) -r -f $(addprefix $(SIFEL_ROOT)$(BIN_ROOT)$(MODULE_PATH),$(REMOVEDIR)))
	@(echo " surffind was successfully cleaned")

cleandepall:
	@($(RM) -r -f $(SIFEL_ROOT)$(BIN_ROOT)$(MODULE_PATH))
	@(echo " surffind BIN was successfully cleaned")



####################################################################
#  Dependencies generated by compilers
#
-include $(DEPS)



####################################################################
#  Suffix rules
#
$(OUTPUTPATH)%.o : %.cpp
	@export CPATH=$(INCLUDES); \
	echo $(CC) -c $(CFLAGS) $(<D)/$(<F); \
	$(CC) -c $(CFLAGS) $(COMPATFLAGS) $(DEFS) $(<D)/$(<F) -o $(@D)/$(@F)
