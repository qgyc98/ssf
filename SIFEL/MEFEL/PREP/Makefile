####################################################################
#
#  Makefile for MEFEL preprocesor
#
####################################################################



################################################################### 
#  Include default part of Makefile - 
#  compiler definitions, flags, libraries ...
#
include ../../Makefile.in



################################################################### 
#  List of include directories
#
INCLUDES        = ../SRC/:../../GEFEL/:../../GEFEL/PARSER/:../../GEFEL/OPTIM:../../GEFEL/RANDY:../../GEFEL/CMLFILE



################################################################### 
#  List of libraries
#
LOC_LIBS        = -lmef -lgef



####################################################################
#  List of source files
#

SRCS  = bocon.cpp dbcrs.cpp dbmat.cpp descrip.cpp entityload.cpp entitytdload.cpp 
SRCS += hangnode.cpp hngen.cpp input.cpp msmap.cpp output.cpp pointset.cpp tempload.cpp



####################################################################
#  List of object files
#
OBJS         = $(SRCS:%.cpp=$(OUTPUTPATH)%.o)
MOBJS        = $(OUTPUTPATH)mechprep.o
MECHPREP     = $(OUTPUTPATH)mechprep
LIBMPREP     = $(OUTPUTPATH)libmprep.a
DEPS         = $(SRCS:%.cpp=$(OUTPUTPATH)%.d) $(MOBJS:%.o=%.d)



####################################################################
#  List of lib files which mechprep depends on
#

# list of file names of dependent libraries
LIBDEPS  = $(SIFEL_ROOT)$(BIN_ROOT)GEFEL/$(OUTPUTDIR)libgef.a
LIBDEPS += $(SIFEL_ROOT)$(BIN_ROOT)MEFEL/SRC/$(OUTPUTDIR)libmef.a

# path to directories with needed libraries for the MECHPREP target
DIR_LIBS  = -L$(SIFEL_ROOT)$(BIN_ROOT)GEFEL/$(OUTPUTDIR)
DIR_LIBS += -L$(SIFEL_ROOT)$(BIN_ROOT)MEFEL/SRC/$(OUTPUTDIR)



###########################################################################################
#  Following targets will be made regardless of whether there are files with the same names
#
.PHONY : mefel



####################################################################
#  Targets
#
all:  $(MECHPREP)

$(MECHPREP):  $(LIBDEPS) $(MOBJS) $(OBJS)
	@($(RM) $@)
	@($(RM) ../$@)
	@(echo "\n##### Creating MECHPREP library . . .")
	@(echo $(AR) $(ARFLAGS) $(OUTPUTPATH)libmprep.a $(SRCS:%.cpp=$(OUTPUTDIR)%.o))
	@($(AR) $(ARFLAGS) $(OUTPUTPATH)libmprep.a $(OBJS))
	@(echo "##### MECHPREP library was successfully created")
	@(echo "##### Creating mechprep executable . . .")
	$(CC) -o $@ $(MOBJS) $(EXECFLAGS) -L$(OUTPUTPATH) -lmprep $(DIR_LIBS) $(LOC_LIBS) $(SYS_LIBS)
	@(echo "##### mechprep was successfully created")

$(MOBJS): | $(OUTPUTPATH)
$(OBJS):  | $(OUTPUTPATH)

$(OUTPUTPATH):
	@(mkdir -p $(OUTPUTPATH))

$(LIBDEPS): mefel;

clean:    
	@($(RM) $(MECHPREP) $(LIBMPREP) $(OBJS) $(MOBJS) $(DEPS) *~ core)
	@(echo " mechprep was successfully cleaned")

cleanall: $(LIBDEPS)
	@($(RM) -r -f $(addprefix $(SIFEL_ROOT)$(BIN_ROOT)$(MODULE_PATH),$(REMOVEDIR)))
	@(echo " mechprep was successfully cleaned")

cleandepall: $(LIBDEPS)
	@($(RM) -r -f $(SIFEL_ROOT)$(BIN_ROOT)$(MODULE_PATH))
	@(echo " mechprep was successfully cleaned")



###################################################################
#  List of targets with dependent modules
#
mefel:
	+@(cd ../SRC; $(MAKE) $(MAKECMDGOALS))



####################################################################
#  Dependencies generated by compilers
#
-include $(DEPS)



####################################################################
#  Suffix rules
#
$(OUTPUTPATH)%.o : %.cpp
	@export CPATH=$(INCLUDES); \
	echo $(CC) $(CFLAGS) -c $(<D)/$(<F); \
	$(CC) $(CFLAGS) $(COMPATFLAGS) $(COMMONFLAGS) $(DEFS) -c $(<D)/$(<F) -o $(@D)/$(@F)
